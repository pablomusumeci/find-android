<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:paddingTop="@dimen/activity_vertical_margin"
             android:paddingLeft="@dimen/activity_horizontal_margin"
             android:paddingRight="@dimen/activity_horizontal_margin"
             tools:context="io.github.pablomusumeci.find.ui.fragments.TrackingFragment">

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/currentLocationLabel"
                android:text="@string/location"
                android:layout_gravity="center_horizontal"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/value_location"
                android:layout_below="@+id/currentLocationLabel"
                android:layout_gravity="center_horizontal"/>

        <ProgressBar
                style="@style/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progress_bar_tracking"
                android:layout_below="@+id/currentLocationLabel" />

        <Button
                style="@style/buttonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/progress_bar_tracking"
                android:text="Back"
                android:id="@+id/return_from_tracking"/>

    </RelativeLayout>
</FrameLayout>
